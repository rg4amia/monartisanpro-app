{
    "openapi": "3.0.0",
    "info": {
        "title": "ProSartisan Platform API",
        "description": "API documentation for the ProSartisan marketplace platform connecting clients with skilled artisans in Côte d'Ivoire",
        "version": "1.0.0",
        "contact": {
            "name": "ProSartisan Support",
            "email": "support@prosartisan.ci"
        }
    },
    "servers": [
        {
            "url": "/api/v1",
            "description": "Production API"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Error": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string",
                        "description": "Error type identifier"
                    },
                    "message": {
                        "type": "string",
                        "description": "Human-readable error message"
                    },
                    "status_code": {
                        "type": "integer",
                        "description": "HTTP status code"
                    }
                },
                "required": [
                    "error",
                    "message",
                    "status_code"
                ]
            },
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "user_type": {
                        "type": "string",
                        "enum": [
                            "CLIENT",
                            "ARTISAN",
                            "FOURNISSEUR",
                            "REFERENT_ZONE",
                            "ADMIN"
                        ]
                    },
                    "account_status": {
                        "type": "string",
                        "enum": [
                            "PENDING",
                            "ACTIVE",
                            "SUSPENDED"
                        ]
                    },
                    "phone_number": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "Mission": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "client_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "description": {
                        "type": "string"
                    },
                    "trade_category": {
                        "type": "string",
                        "enum": [
                            "PLUMBER",
                            "ELECTRICIAN",
                            "MASON"
                        ]
                    },
                    "location": {
                        "$ref": "#/components/schemas/Location"
                    },
                    "budget_min": {
                        "type": "integer",
                        "description": "Minimum budget in XOF centimes"
                    },
                    "budget_max": {
                        "type": "integer",
                        "description": "Maximum budget in XOF centimes"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "OPEN",
                            "QUOTED",
                            "ACCEPTED",
                            "CANCELLED"
                        ]
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "Location": {
                "type": "object",
                "properties": {
                    "latitude": {
                        "type": "number",
                        "format": "double"
                    },
                    "longitude": {
                        "type": "number",
                        "format": "double"
                    }
                },
                "required": [
                    "latitude",
                    "longitude"
                ]
            },
            "Devis": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "mission_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "artisan_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "total_amount": {
                        "type": "integer",
                        "description": "Total amount in XOF centimes"
                    },
                    "materials_amount": {
                        "type": "integer",
                        "description": "Materials amount in XOF centimes"
                    },
                    "labor_amount": {
                        "type": "integer",
                        "description": "Labor amount in XOF centimes"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "PENDING",
                            "ACCEPTED",
                            "REJECTED"
                        ]
                    },
                    "line_items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/DevisLine"
                        }
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "DevisLine": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string"
                    },
                    "quantity": {
                        "type": "integer"
                    },
                    "unit_price": {
                        "type": "integer",
                        "description": "Unit price in XOF centimes"
                    },
                    "line_type": {
                        "type": "string",
                        "enum": [
                            "MATERIAL",
                            "LABOR"
                        ]
                    }
                }
            }
        }
    },
    "paths": {
        "/auth/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register a new user",
                "description": "Register a new user account (Client, Artisan, or Fournisseur)",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "minLength": 8
                                    },
                                    "user_type": {
                                        "type": "string",
                                        "enum": [
                                            "CLIENT",
                                            "ARTISAN",
                                            "FOURNISSEUR"
                                        ]
                                    },
                                    "phone_number": {
                                        "type": "string"
                                    },
                                    "trade_category": {
                                        "type": "string",
                                        "enum": [
                                            "PLUMBER",
                                            "ELECTRICIAN",
                                            "MASON"
                                        ],
                                        "description": "Required for ARTISAN user type"
                                    },
                                    "location": {
                                        "$ref": "#/components/schemas/Location",
                                        "description": "Required for ARTISAN user type"
                                    },
                                    "business_name": {
                                        "type": "string",
                                        "description": "Required for FOURNISSEUR user type"
                                    },
                                    "shop_location": {
                                        "$ref": "#/components/schemas/Location",
                                        "description": "Required for FOURNISSEUR user type"
                                    }
                                },
                                "required": [
                                    "email",
                                    "password",
                                    "user_type",
                                    "phone_number"
                                ]
                            },
                            "examples": {
                                "client": {
                                    "summary": "Client registration",
                                    "value": {
                                        "email": "client@example.com",
                                        "password": "password123",
                                        "user_type": "CLIENT",
                                        "phone_number": "+225123456789"
                                    }
                                },
                                "artisan": {
                                    "summary": "Artisan registration",
                                    "value": {
                                        "email": "artisan@example.com",
                                        "password": "password123",
                                        "user_type": "ARTISAN",
                                        "phone_number": "+225123456789",
                                        "trade_category": "PLUMBER",
                                        "location": {
                                            "latitude": 5.3364,
                                            "longitude": -4.0267
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        },
                                        "token": {
                                            "type": "string",
                                            "description": "JWT authentication token"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "example": {
                                    "error": "VALIDATION_ERROR",
                                    "message": "The email field is required.",
                                    "status_code": 400
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Email already exists",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "example": {
                                    "error": "EMAIL_EXISTS",
                                    "message": "A user with this email already exists.",
                                    "status_code": 409
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Authenticate user",
                "description": "Login with email and password to receive JWT token",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "email",
                                    "password"
                                ]
                            },
                            "example": {
                                "email": "user@example.com",
                                "password": "password123"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        },
                                        "token": {
                                            "type": "string",
                                            "description": "JWT authentication token"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "example": {
                                    "error": "INVALID_CREDENTIALS",
                                    "message": "Invalid email or password.",
                                    "status_code": 401
                                }
                            }
                        }
                    },
                    "423": {
                        "description": "Account locked",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "example": {
                                    "error": "ACCOUNT_LOCKED",
                                    "message": "Account is temporarily locked due to multiple failed login attempts.",
                                    "status_code": 423
                                }
                            }
                        }
                    }
                }
            }
        },
        "/missions": {
            "get": {
                "tags": [
                    "Marketplace"
                ],
                "summary": "List missions",
                "description": "Get paginated list of missions with optional filters",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Items per page",
                        "schema": {
                            "type": "integer",
                            "default": 20,
                            "maximum": 100
                        }
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Filter by trade category",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "PLUMBER",
                                "ELECTRICIAN",
                                "MASON"
                            ]
                        }
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Filter by mission status",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "OPEN",
                                "QUOTED",
                                "ACCEPTED",
                                "CANCELLED"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Missions retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Mission"
                                            }
                                        },
                                        "meta": {
                                            "type": "object",
                                            "properties": {
                                                "current_page": {
                                                    "type": "integer"
                                                },
                                                "per_page": {
                                                    "type": "integer"
                                                },
                                                "total": {
                                                    "type": "integer"
                                                },
                                                "last_page": {
                                                    "type": "integer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Marketplace"
                ],
                "summary": "Create a new mission",
                "description": "Create a new mission (Client only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "description": {
                                        "type": "string",
                                        "minLength": 10
                                    },
                                    "trade_category": {
                                        "type": "string",
                                        "enum": [
                                            "PLUMBER",
                                            "ELECTRICIAN",
                                            "MASON"
                                        ]
                                    },
                                    "location": {
                                        "$ref": "#/components/schemas/Location"
                                    },
                                    "budget_min": {
                                        "type": "integer",
                                        "description": "Minimum budget in XOF centimes"
                                    },
                                    "budget_max": {
                                        "type": "integer",
                                        "description": "Maximum budget in XOF centimes"
                                    }
                                },
                                "required": [
                                    "description",
                                    "trade_category",
                                    "location",
                                    "budget_min",
                                    "budget_max"
                                ]
                            },
                            "example": {
                                "description": "Réparation de fuite d'eau dans la cuisine",
                                "trade_category": "PLUMBER",
                                "location": {
                                    "latitude": 5.3364,
                                    "longitude": -4.0267
                                },
                                "budget_min": 5000000,
                                "budget_max": 10000000
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Mission created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Mission"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden - Only clients can create missions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/missions/{missionId}/quotes": {
            "post": {
                "tags": [
                    "Marketplace"
                ],
                "summary": "Submit a quote for a mission",
                "description": "Submit a quote for a mission (Artisan only, KYC required)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "missionId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "total_amount": {
                                        "type": "integer",
                                        "description": "Total amount in XOF centimes"
                                    },
                                    "materials_amount": {
                                        "type": "integer",
                                        "description": "Materials amount in XOF centimes"
                                    },
                                    "labor_amount": {
                                        "type": "integer",
                                        "description": "Labor amount in XOF centimes"
                                    },
                                    "line_items": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "description": {
                                                    "type": "string"
                                                },
                                                "quantity": {
                                                    "type": "integer"
                                                },
                                                "unit_price": {
                                                    "type": "integer"
                                                },
                                                "line_type": {
                                                    "type": "string",
                                                    "enum": [
                                                        "MATERIAL",
                                                        "LABOR"
                                                    ]
                                                }
                                            },
                                            "required": [
                                                "description",
                                                "quantity",
                                                "unit_price",
                                                "line_type"
                                            ]
                                        }
                                    }
                                },
                                "required": [
                                    "total_amount",
                                    "materials_amount",
                                    "labor_amount",
                                    "line_items"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Quote submitted successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Devis"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation error or mission already has 3 quotes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden - KYC required or not an artisan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Mission not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}