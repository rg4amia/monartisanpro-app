  "componentPatterns": {
    "cards": {
      "promotional": {
        "layout": "horizontal",
        "structure": "Promotional cards feature bold gradient backgrounds with illustrations, combining discount text, promotional copy, and imagery",
        "styling": {
          "background": "Vibrant gradients (blues, purples)",
          "borderRadius": "16px",
          "padding": "20px",
          "illustration": "Character illustrations positioned on the right",
          "textHierarchy": "Large percentage/number, bold headline, supporting text"
        }
      },
      "categoryCard": {
        "layout": "grid",
        "structure": "Square or rectangular cards with centered icon and label",
        "styling": {
          "background": "Solid color backgrounds or semi-transparent overlays",
          "borderRadius": "16px",
          "padding": "16px",
          "iconSize": "48px - 64px",
          "activeState": "Accent color background with white text/icon",
          "inactiveState": "Muted background with regular icon/text"
        },
        "variants": [
          "Primary category (larger, accent colored)",
          "Secondary categories (uniform size, muted colors)"
        ]
      },
      "serviceCard": {
        "layout": "vertical",
        "structure": "Image, service name, rating, price, provider info",
        "components": [
          "Full-width image with rounded top corners",
          "Service title and pricing badge overlay or below",
          "Star rating with review count",
          "Provider avatar, name, and role"
        ],
        "styling": {
          "borderRadius": "16px",
          "imageAspectRatio": "16:9 or 4:3",
          "priceBadge": "Floating or inline, accent color",
          "spacing": "12px between elements"
        }
      },
      "paymentCard": {
        "layout": "horizontal",
        "structure": "Gradient background with card details",
        "styling": {
          "background": "Gradient (pink-to-orange, blue-to-purple)",
          "borderRadius": "16px",
          "padding": "20px",
          "cardNumber": "Masked with dots, monospace font",
          "cardBrand": "Icon positioned top-right"
        }
      },
      "bookingCard": {
        "layout": "vertical",
        "structure": "Service image, booking details, provider info, status",
        "components": [
          "Thumbnail image",
          "Booking ID and date",
          "Service name and price",
          "Provider details",
          "Status badge (Completed, Pending, etc.)"
        ],
        "styling": {
          "statusColors": {
            "completed": "#10B981",
            "pending": "#F59E0B",
            "cancelled": "#EF4444"
          }
        }
      }
    },
    
    "buttons": {
      "primary": {
        "background": "Accent color gradient or solid",
        "textColor": "White",
        "borderRadius": "12px",
        "padding": "16px 24px",
        "fontSize": "16px",
        "fontWeight": 600,
        "shadow": "Medium elevation"
      },
      "secondary": {
        "background": "Transparent or light overlay",
        "border": "1px solid accent or overlay color",
        "textColor": "Accent or primary text",
        "borderRadius": "12px",
        "padding": "16px 24px"
      },
      "icon": {
        "shape": "Circle or rounded square",
        "size": "40px - 48px",
        "background": "Semi-transparent overlay",
        "iconSize": "20px - 24px"
      },
      "floating": {
        "position": "Fixed bottom-right or center-bottom",
        "shape": "Rounded pill or circle",
        "shadow": "Large elevation with accent glow",
        "icon": "Plus, search, or action icon"
      }
    },
    
    "navigation": {
      "topBar": {
        "height": "56px - 64px",
        "layout": "Left icon (menu/back) + Center title + Right icon (notifications/actions)",
        "background": "Transparent or primary background",
        "elevation": "None or subtle shadow"
      },
      "bottomBar": {
        "height": "64px - 72px",
        "items": "4-5 navigation items",
        "layout": "Icon above label",
        "activeState": "Accent color with filled icon",
        "inactiveState": "Muted color with outline icon",
        "background": "Card background with blur effect",
        "borderRadius": "24px 24px 0 0 or floating pill"
