  "designPrinciples": {
    "visualHierarchy": [
      "Use size, color, and weight to establish clear hierarchy",
      "Promotional content uses bold colors and large type",
      "Secondary content uses muted colors and smaller type",
      "Critical actions use accent colors and prominent placement"
    ],
    
    "cardDesign": [
      "Consistent border radius across all cards (12px-16px)",
      "Subtle shadows for depth (more pronounced in dark mode)",
      "Card backgrounds contrast with page background",
      "Images always have rounded corners matching card radius"
    ],
    
    "iconUsage": [
      "Icons are colorful and illustrative, not just outlines",
      "Category icons use 2-3 colors with simple shapes",
      "Icons maintain consistent visual weight",
      "Active states use filled icons, inactive use outlined or muted versions"
    ],
    
    "colorApplication": [
      "Dark mode: Deep blue base with purple undertones",
      "Accent colors (blues, greens) provide energy and highlight actions",
      "Use overlays and transparency for depth and layering",
      "Status colors follow standard conventions (green=success, yellow=warning, red=error)"
    ],
    
    "contentDensity": [
      "Grid layouts for categories (2-3 columns on mobile)",
      "Vertical lists for detailed service cards",
      "Generous padding and spacing to avoid clutter",
      "Maximum 6-8 items visible before scrolling"
    ],
    
    "imagery": [
      "Real photos for service listings and providers",
      "Illustrated characters for promotional and empty states",
      "Icons for categories and navigation",
      "All images have consistent aspect ratios within context"
    ]
  },
  
